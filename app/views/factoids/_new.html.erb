<%= form_for(factoid) do |f| %>


  <div class="field" display='none'>
    <%= f.label :text, hidden:true %>
    <%= f.text_area :text, hidden:true %>
  </div>

  <div class="field" display="none">
    <%= f.label :url, hidden:true %>
    <%= f.text_area :text, hidden:true %>
  </div>

  <div class="actions">
    <%= f.submit 'truth', id:"submit-factoid", class:"submit-button"%>
  </div>
<% end %>
